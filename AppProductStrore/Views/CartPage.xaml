<Page
    x:Class="AppProductStrore.Views.CartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppProductStrore.ViewModels"
    xmlns:help="using:AppProductStrore.Helpers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    x:Name="PageRoot">

    <Page.DataContext>
        <local:CartViewModel/>
    </Page.DataContext>

    <Page.Resources>
        <help:SortOptionToStringConverter x:Key="SortOptionToStringConverter"/>
    </Page.Resources>

    <StackPanel Padding="16" Spacing="12">
        <!-- Header -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,0,0,10">
            <TextBlock Text="{Binding TotalQuantityText}" FontSize="18" Margin="0,0,16,0"/>
            <TextBlock Text="{Binding TotalPriceText}" FontSize="18"/>
            <ComboBox Width="160" Margin="32,0,0,0" SelectedIndex="0"
                      ItemsSource="{Binding SortOptions}"
                    SelectedItem="{Binding SortOption, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Converter={StaticResource SortOptionToStringConverter}}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>

        <!-- List of products -->
        <ListView ItemsSource="{Binding CartItems}" SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="8" Margin="0,4" Padding="10" Background="White">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Left side: product info -->
                            <StackPanel Orientation="Horizontal" Grid.Column="0" Spacing="12">
                                <Image Source="{Binding Product.ImagePath}" Width="60" Height="60" ImageFailed="Image_ImageFailed"/>
                                <StackPanel>
                                    <TextBlock Text="{Binding Product.Name}" FontWeight="Bold" FontSize="16"/>
                                    <TextBlock Text="{Binding PriceFormatted}"/>
                                    <TextBlock Text="{Binding QuantityFormatted}"/>
                                    <TextBlock Text="{Binding TotalFormatted}"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Right side: delete button -->
                            <Button Content="Удалить"
                                    Grid.Column="1"
                                    VerticalAlignment="Center">
                                <interactivity:Interaction.Behaviors>
                                    <core:EventTriggerBehavior EventName="Click">
                                        <core:InvokeCommandAction Command="{Binding DataContext.RemoveFromCartCommand, ElementName=PageRoot}"
                                                                  CommandParameter="{Binding}"/>
                                    </core:EventTriggerBehavior>
                                </interactivity:Interaction.Behaviors>
                            </Button>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</Page>
