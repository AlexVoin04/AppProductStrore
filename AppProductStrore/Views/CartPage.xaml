<Page
    x:Class="AppProductStrore.Views.CartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppProductStrore.ViewModels"
    xmlns:help="using:AppProductStrore.Helpers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    x:Name="PageRoot">

    <Page.DataContext>
        <local:CartViewModel/>
    </Page.DataContext>

    <Page.Resources>
        <help:SortOptionToStringConverter x:Key="SortOptionToStringConverter"/>
    </Page.Resources>

    <Grid Padding="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Scrollable List -->
        </Grid.RowDefinitions>

        <Border 
            x:Name="HeaderShadowHost"
            Grid.Row="0"
            Padding="12"
            Background="#F5F5F5"
            CornerRadius="8"
            BorderBrush="#DDDDDD"
            BorderThickness="1"
            Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="0" Margin="0,0,20,0">
                    <FontIcon Glyph="&#xE14C;" FontSize="18" Margin="0,0,6,0"/>
                    <TextBlock Text="{Binding TotalQuantityText}" FontSize="18" FontWeight="SemiBold"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="1" Margin="0,0,20,0">
                    <TextBlock Text="{Binding TotalPriceText}" FontSize="18" FontWeight="SemiBold"/>
                </StackPanel>

                <Grid Grid.Column="2"/>

                <ComboBox Width="180"
                  Grid.Column="3"
                  ItemsSource="{Binding SortOptions}"
                  SelectedItem="{Binding SortOption, Mode=TwoWay}"
                  HorizontalAlignment="Right">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource SortOptionToStringConverter}}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ListView ItemsSource="{Binding CartItems}" SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="8" Margin="0,4" Padding="10" Background="White">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Orientation="Horizontal" Grid.Column="0" Spacing="12">
                                    <Image Source="{Binding Product.ImagePath}" Width="60" Height="60" ImageFailed="Image_ImageFailed"/>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Product.Name}" FontWeight="Bold" FontSize="16"/>
                                        <TextBlock Text="{Binding PriceFormatted}"/>
                                        <TextBlock Text="{Binding QuantityFormatted}"/>
                                        <TextBlock Text="{Binding TotalFormatted}"/>
                                    </StackPanel>
                                </StackPanel>

                                <Button Content="Удалить"
                                        Grid.Column="1"
                                        VerticalAlignment="Center">
                                    <interactivity:Interaction.Behaviors>
                                        <core:EventTriggerBehavior EventName="Click">
                                            <core:InvokeCommandAction Command="{Binding DataContext.RemoveFromCartCommand, ElementName=PageRoot}"
                                                                      CommandParameter="{Binding}"/>
                                        </core:EventTriggerBehavior>
                                    </interactivity:Interaction.Behaviors>
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
    </Grid>
</Page>
